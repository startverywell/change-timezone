{
  "manifest_version": 3,
  "name": "Time Zone Converter",
  "version": "3.0.0",
  "version_name": "Refactor",
  "description": "Time Zone Converter",
  "icons": { "128": "tcicon128.png" },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["main.js"],
      "matches": ["https://*"]
    }
  ],
  "permissions": ["storage"],
  "web_accessible_resources": [
    {
      "resources": ["tcicon128.png"],
      "matches": ["https://*"]
    }
  ]
}
